  function drawGrid(c) {
  const options = {
      distance: c.width/2,
      width: c.width,
      height: c.height,
      param: {
        stroke: "#ebebeb",
        strokeWidth: 2.5,
        selectable: false
      }
    },
    gridLen = options.width / options.distance;

console.log(gridLen)
  for (var i = 0; i < gridLen; i++) {
    var distance = i * options.distance,
      horizontal = new fabric.Line(
        [distance, 0, distance, options.width],
        options.param
      ),
      vertical = new fabric.Line(
        [0, distance, options.width, distance],
        options.param
      );
    c.add(horizontal);
    c.add(vertical);
    if (i % 4 === 0) {
      horizontal.set({ stroke: "#cccccc" });
      vertical.set({ stroke: "#cccccc" });
    }
  }
}


  var textbox = new fabric.Textbox('Drag above characters onto this canvas, double click me to type', {
